<p id="notice"><%= notice %></p>

<div class="container mt-5">
  <div class="page-header">
    <h1>Interviews</h1>
  </div>
</div>

<div class="container mt-4">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Round</th>
        <th>Participants</th>
        <th>Starts at</th>
        <th>Ends at</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @interviews.each do |interview| %>
        <tr>
          <td><%= interview.round %></td>
          <td>
            <% for participant in Participant.all %>
              <%if interview.participants.include?(participant) %>
                <span> <%= participant.name %> </span>
              <% end%> 
            <% end %>
          </td>
          <td><%= interview.starts_at %></td>
          <td><%= interview.ends_at %></td>
          <td><%= link_to 'Show', interview %></td>
          <td><%= link_to 'Edit', edit_interview_path(interview) %></td>
          <td><%= link_to 'Destroy', interview, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'Add Interview', new_interview_path, class: 'btn btn-primary' %>
</div>

