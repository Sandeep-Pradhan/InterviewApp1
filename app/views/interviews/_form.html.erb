<%= form_with(model: interview, local: true, html: { multipart: true }) do |form| %>

  <div class="form-group">
    <%= form.label :name, "Round:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.text_field :round, class: "form-control" %>
    </div>
    
    <div class="text-danger">
      <%= interview.errors[:round][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Participants:", class: "col-md-4 control-label font-weight-bold" %><br>
    <% for participant in Participant.all %>
      <%= check_box_tag "interview[participant_ids][]", participant.id, @interview.participants.include?(participant) %>
      <%= participant.name %><br />
    <% end %>

    <div class="text-danger">
      <%= interview.errors[:participant_ids][0] %>
    </div>
  </div>


  <div class="form-group">
    <%= form.label :name, "Starts At:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.datetime_select :starts_at, class: "form-control" %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:starts_at][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Ends At:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.datetime_select :ends_at, class: "form-control" %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:ends_at][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Resume:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.file_field :resume %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:resume][0] %>
    </div>
  </div>

  <div class="actions mt-4 ml-3">
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
