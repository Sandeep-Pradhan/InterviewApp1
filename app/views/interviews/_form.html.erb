<%= form_with(model: interview, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name, "Round:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.text_field :round, class: "form-control" %>
    </div>
    
    <div class="text-danger">
      <%= interview.errors[:round][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Participant1:", class: "col-md-4 control-label font-weight-bold" %>
    
    <div class="col-md-8">
      <% options = options_from_collection_for_select(Participant.all, 'email', 'email', form.object.participant1) %>
      <%= form.select :participant1,  options, {}, class: "form-control"  %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:participant1][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Participant2:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <% options = options_from_collection_for_select(Participant.all, 'email', 'email', form.object.participant2) %>
      <%= form.select :participant2,  options, {}, class: "form-control"  %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:participant2][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Starts At:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.datetime_select :starts_at, class: "form-control" %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:starts_at][0] %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, "Ends At:", class: "col-md-4 control-label font-weight-bold" %>
    <div class="col-md-8">
      <%= form.datetime_select :ends_at, class: "form-control" %>
    </div>

    <div class="text-danger">
      <%= interview.errors[:ends_at][0] %>
    </div>
  </div>

  <div class="actions mt-4 ml-3">
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
